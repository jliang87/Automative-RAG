# API settings
API_KEY=your-custom-api-key-here
API_AUTH_ENABLED=true

# Server settings
HOST=0.0.0.0
PORT=8000

# Qdrant settings
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=automotive_specs

# GPU settings
DEVICE=cuda:0
USE_FP16=true
BATCH_SIZE=16

# Model settings - can be HuggingFace IDs or local paths
# For HuggingFace:
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
COLBERT_MODEL=colbert-ir/colbertv2.0
DEEPSEEK_MODEL=deepseek-ai/deepseek-coder-6.7b-instruct

# For local paths (uncomment and modify):
# EMBEDDING_MODEL=/path/to/local/bge-model
# COLBERT_MODEL=/path/to/local/colbert-model
# DEEPSEEK_MODEL=/path/to/local/deepseek-model
# WHISPER_MODEL_PATH=/path/to/local/whisper-models

# LLM settings
LLM_USE_4BIT=true
LLM_USE_8BIT=false
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=512

# Whisper settings for YouTube transcription
WHISPER_MODEL_SIZE=medium
USE_YOUTUBE_CAPTIONS=true
USE_WHISPER_AS_FALLBACK=true

# PDF OCR settings
USE_PDF_OCR=true
OCR_LANGUAGES=eng

# Retrieval settings
RETRIEVER_TOP_K=20
RERANKER_TOP_K=5
COLBERT_BATCH_SIZE=16

# Chunking settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200